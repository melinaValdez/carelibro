<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".PostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/updatePostPage_toolBar"
            layout="@layout/app_bar_layout"/>


        <EditText
            android:id="@+id/txtDescriptionYT"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="What are you thinking?"
            android:layout_alignTop="@+id/toolbar"
            android:layout_marginTop="80dp"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:padding="6dp"/>
        <EditText
            android:id="@+id/txtLinkYT"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="Youtube Link"
            android:layout_alignTop="@+id/txtDescription"
            android:layout_marginTop="200dp"
            android:textSize="18dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:padding="6dp"/>

        <Button
            android:id="@+id/btnPostYT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_centerHorizontal="true"/>



    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>