<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="250dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/carelibro"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:layout_alignTop="@id/imgLogo"
            android:layout_marginTop="180dp"
            android:hint="Email"
            android:background="@color/white"
            android:drawableLeft="@drawable/email" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="18sp"
            android:layout_alignStart="@+id/txtEmail"
            android:layout_alignEnd="@+id/txtEmail"
            android:layout_alignTop="@+id/txtEmail"
            android:layout_marginTop="80dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/password"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/txtPassword"
            android:layout_marginTop="80dp"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/lblDontAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_account"
            android:textSize="19sp"
            android:layout_alignTop="@id/btnGoogle"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/lblCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_account"
            android:textSize="19sp"
            android:layout_alignTop = "@id/lblDontAccount"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblSignInWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in_with"
            android:layout_alignTop="@id/btnLogin"
            android:layout_marginTop="80dp"
            android:textSize="19sp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/btnGoogle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_focused"
            android:layout_alignTop="@id/lblSignInWith"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>