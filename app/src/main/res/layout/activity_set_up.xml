<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpActivity"
    android:background="@color/colorAccent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>

        <EditText
            android:id="@+id/txtUsername"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:ems="10"
            android:gravity="start|center"
            android:inputType="textMultiLine"
            android:hint="Username"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/imgProfilePic"
            android:layout_marginTop="230dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/username"/>

        <EditText
            android:id="@+id/txtFullName"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:ems="10"
            android:gravity="start|center"
            android:inputType="textMultiLine"
            android:hint="Full name"
            android:layout_alignStart="@+id/txtUsername"
            android:layout_alignEnd="@+id/txtUsername"
            android:layout_alignTop="@+id/txtUsername"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/name"/>

        <EditText
            android:id="@+id/txtCity"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:ems="10"
            android:gravity="start|center"
            android:inputType="textMultiLine"
            android:hint="City"
            android:layout_alignStart="@+id/txtUsername"
            android:layout_alignEnd="@+id/txtUsername"
            android:layout_alignTop="@+id/txtFullName"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/country"/>

        <EditText
            android:id="@+id/txtDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:ems="10"
            android:gravity="start|center"
            android:inputType="text"
            android:hint="Date of birth: dd/mm/yy"
            android:layout_alignStart="@+id/txtUsername"
            android:layout_alignEnd="@+id/txtUsername"
            android:layout_alignTop="@+id/txtCity"
            android:layout_marginTop="60dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/birthday"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_alignTop="@+id/txtDateOfBirth"
            android:layout_marginTop="60dp"
            android:background="@drawable/buttons"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>